{
    "$schema": "http://json-schema.org/draft-06/schema",
    "$ref": "#/definitions/FlexiBLEDevice",
    "definitions": {
        "FlexiBLEDevice": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "title": "FlexiBLE Device Name",
                    "description": "A user friendly name for the FlexiBLE device",
                    "examples": ["ExampleSensor"],
                    "type": "string"
                },
                "description": {
                    "title": "FlexiBLE Device Description",
                    "description": "A user friendly description for the FlexiBLE device",
                    "examples": ["ExampleSensor is a sensor that does something"],
                    "type": "string"
                },
                "flexible_version": {
                    "const": "0.4.0",
                    "default": "0.4.0",
                    "type": "string",
                    "readOnly": true
                },
                "ble": {
                    "title": "BLE Details",
                    "description": "Details of the FlexiBLE device's BLE implementation",
                    "$ref": "#/definitions/FlexiBLEDeviceBle"
                },
                "config_values": {
                    "title": "Device Configurations",
                    "description": "Configuration values for the FlexiBLE device",
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Value"
                    }
                },
                "commands": {
                    "title": "Device Commands",
                    "description": "Commands that can be initaited by the central device",
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Command"
                    }
                },
                "data_streams": {
                    "title": "Data Streams",
                    "descriptions": "Embedded sensor data",
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/DataStream"
                    }
                }
            },
            "required": [
                "ble",
                "commands",
                "config_values",
                "data_streams",
                "flexible_version",
                "name"
            ],
            "title": "FlexiBLEDevice"
        },
        "FlexiBLEDeviceBle": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "spec_services": {
                    "title": "BLE GATT Services",
                    "description": "Standarized GATT Services (from Bluetooth specification)",
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": ["battery", "heart_rate"]
                    }
                },
                "flexible_service_uuid": {
                    "title": "FlexiBLE Service UUID",
                    "type": "string",
                    "format": "uuid",
                    "default": "1a220001-c2ed-4d11-ad1e-fc06d8a02d37",
                    "readOnly": true
                },
                "device_in_char_uuid": {
                    "title": "FlexiBLE Data-In Characteristic UUID",
                    "type": "string",
                    "format": "uuid",
                    "default": "1a220004-c2ed-4d11-ad1e-fc06d8a02d37",
                    "readOnly": true
                },
                "device_out_char_uuid": {
                    "title": "FlexiBLE Data-Out Characteristic UUID",
                    "type": "string",
                    "format": "uuid",
                    "default": "1a220005-c2ed-4d11-ad1e-fc06d8a02d37",
                    "readOnly": true
                }
            },
            "required": [
                "device_in_char_uuid",
                "device_out_char_uuid",
                "flexible_service_uuid",
                "spec_services"
            ],
            "title": "FlexiBLEDeviceBle"
        },
        "Command": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "command_code": {
                    "title": "Command Code",
                    "description": "Code used to identify the command",
                    "type": "integer",
                    "examples": [1,2,3]
                },
                "app_requests": {
                    "title": "App Requests",
                    "description": "Requests that can be made by the central device",  
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/CommandRequest"
                    }
                }
            },
            "required": [
                "app_requests",
                "command_code"
            ],
            "title": "Command"
        },
        "CommandRequest": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "code": {
                    "title": "Request Code",
                    "description": "Code used to identify the request",
                    "type": "integer"
                },
                "name": {
                    "title": "Request Name",
                    "description": "user friendly name for the request",
                    "type": "string",
                    "examples": ["My Request"]
                },
                "description": {
                    "title": "Request Description",
                    "description": "User friendly description for the request",
                    "type": "string"
                },
                "responses": {
                    "title": "Request Responses",
                    "description": "Responses that can be made by the FlexiBLE device for the specific request",
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/CommandResponse"
                    }
                }
            },
            "required": [
                "code",
                "description",
                "name"
            ],
            "title": "CommandRequest"
        },
        "CommandResponse": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "code": {
                    "title": "Request Code",
                    "description": "Code used to identify the response",
                    "type": "integer"
                },
                "name": {
                    "title": "Response Name",
                    "description": "user friendly name for the response",
                    "type": "string",
                    "examples": ["My Request"]
                },
                "description": {
                    "title": "Response Description",
                    "description": "User friendly description for the response",
                    "type": "string"
                },
                "response_type": {
                    "title": "Response Type",
                    "description": "Type of response that can be made by the FlexiBLE device for the specific response",
                    "type": "string",
                    "enum": ["success", "error"]
                }
            },
            "required": [
                "code",
                "description",
                "name"
            ],
            "title": "CommandResponse"
        },
        "Value": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "title": "Data Value Name",
                    "description": "User friendly name for the data value",
                    "type": "string"
                },
                "description": {
                    "title": "Data Value Description",
                    "description": "User friendly description for the data value",
                    "type": "string"
                },
                "index": {
                    "title": "Data Value Index",
                    "description": "Explicit order of the data value",
                    "type": "integer"
                },
                "length": {
                    "title": "Data Value Length",
                    "description": "Length of the data value in bytes",
                    "type": "integer"
                },
                "unit": {
                    "title": "Unit of Measurement",
                    "type": "string"
                },
                "multiplier": {
                    "title": "Value Multiplier",
                    "type": "number"
                },
                "data_type": {
                    "title": "Data Type",
                    "description": "Type of the data value",
                    "type": "string",
                    "enum": ["int", "uint", "float", "ascii", "utf-8"]
                },
                "selection_type": {
                    "type": "string",
                    "enum": ["range", "single", "multi"]
                },
                "default_value": {
                    "title": "Default",
                    "$ref": "#/definitions/DefaultValue"
                },
                "options": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Option"
                    }
                },
                "range": {
                    "$ref": "#/definitions/Range"
                },
                "variable_type": {
                    "type": "string",
                    "enum": ["none", "value", "tag"]
                },
                "depends_on": {
                    "type": "string"
                }
            },
            "required": [
            ],
            "title": "Value"
        },
        "DefaultValue": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "data_type": {
                    "title": "Data Type",
                    "description": "Type of the data value",
                    "type": "string",
                    "enum": ["int", "uint", "float", "ascii", "utf-8"]
                },
                "value": {
                    "title": "Value",
                    "description": "String representation of the default value",
                    "type": "string"
                }
            },
            "required": [
                "data_type",
                "value"
            ],
            "title": "DefaultValue"
        },
        "Option": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "value_int": {
                    "type": "integer"
                }
            },
            "required": [
                "description",
                "name",
                "value_int"
            ],
            "title": "Option"
        },
        "Range": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "start": {
                    "type": "number"
                },
                "end": {
                    "type": "number"
                },
                "step": {
                    "type": "number"
                }
            },
            "required": [
                "end",
                "start",
                "step"
            ],
            "title": "Range"
        },
        "DataStream": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "precision": {
                    "type": "string",
                    "enum": ["ms", "us"]
                },
                "config_values": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Value"
                    }
                },
                "data_values": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Value"
                    }
                },
                "ble": {
                    "$ref": "#/definitions/DataStreamBle"
                }
            },
            "required": [
                "ble",
                "config_values",
                "data_values",
                "description",
                "id",
                "name",
                "precision"
            ],
            "title": "DataStream"
        },
        "DataStreamBle": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "service_uuid": {
                    "type": "string",
                    "format": "uuid"
                },
                "data_char_uuid": {
                    "type": "string",
                    "format": "uuid"
                },
                "config_char_uuid": {
                    "type": "string",
                    "format": "uuid"
                }
            },
            "required": [
                "config_char_uuid",
                "data_char_uuid",
                "service_uuid"
            ],
            "title": "DataStreamBle"
        }
    }
}
