{
    "$schema": "http://json-schema.org/draft-06/schema",
    "$ref": "#/definitions/FlexiBLEDevice",
    "definitions": {
        "FlexiBLEDevice": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "title": "FlexiBLE Device Name",
                    "description": "A user friendly name for the FlexiBLE device",
                    "examples": ["ExampleSensor"],
                    "type": "string"
                },
                "description": {
                    "title": "FlexiBLE Device Description",
                    "description": "A user friendly description for the FlexiBLE device",
                    "examples": ["ExampleSensor is a sensor that does something"],
                    "type": "string"
                },
                "can_group": {
                    "title": "Devices Can Group",
                    "description": "Indicates if the device can be grouped with other devices, in which case time synchronization is required",
                    "type": "boolean",
                    "default": false
                },
                "flexible_version": {
                    "const": "0.4.0",
                    "default": "0.4.0",
                    "type": "string",
                    "readOnly": true
                },
                "ble": {
                    "title": "BLE Details",
                    "description": "Details of the FlexiBLE device's BLE implementation",
                    "$ref": "#/definitions/FlexiBLEDeviceBle"
                },
                "config_values": {
                    "title": "Device Configurations",
                    "description": "Configuration values for the FlexiBLE device",
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/ConfigValue"
                    }
                },
                "commands": {
                    "title": "Device Commands",
                    "description": "Commands that can be initaited by the central device",
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Command"
                    }
                },
                "data_streams": {
                    "title": "Data Streams",
                    "descriptions": "Embedded sensor data",
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/DataStream"
                    }
                }
            },
            "required": [
                "ble",
                "commands",
                "config_values",
                "data_streams",
                "flexible_version",
                "name"
            ],
            "title": "FlexiBLEDevice"
        },
        "FlexiBLEDeviceBle": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "ble_services": {
                    "title": "Standard BLE Services",
                    "description": "Standard BLE GATT (from Bluetooth specification) which are supported by FlexiBLE Applications",
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": ["battery", "heart_rate"]
                    }
                },
                "flexible_service_uuid": {
                    "title": "FlexiBLE Service UUID",
                    "type": "string",
                    "format": "uuid",
                    "default": "1a220001-c2ed-4d11-ad1e-fc06d8a02d37",
                    "readOnly": true
                },
                "device_in_char_uuid": {
                    "title": "FlexiBLE Data-In Characteristic UUID",
                    "type": "string",
                    "format": "uuid",
                    "default": "1a220004-c2ed-4d11-ad1e-fc06d8a02d37",
                    "readOnly": true
                },
                "device_out_char_uuid": {
                    "title": "FlexiBLE Data-Out Characteristic UUID",
                    "type": "string",
                    "format": "uuid",
                    "default": "1a220005-c2ed-4d11-ad1e-fc06d8a02d37",
                    "readOnly": true
                },
                "device_role_char_uuid": {
                    "title": "FlexiBLE Device Role Characteristic UUID",
                    "type": "string",
                    "format": "uuid",
                    "default": "1a220006-c2ed-4d11-ad1e-fc06d8a02d37",
                    "readOnly": true
                }
            },
            "required": [
                "device_in_char_uuid",
                "device_out_char_uuid",
                "flexible_service_uuid",
                "spec_services"
            ],
            "title": "FlexiBLEDeviceBle"
        },
        "Command": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "command_code": {
                    "title": "Command Code",
                    "description": "Code used to identify the command",
                    "type": "integer",
                    "examples": [1,2,3]
                },
                "app_requests": {
                    "title": "App Requests",
                    "description": "Requests that can be made by the central device",  
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/CommandRequest"
                    }
                }
            },
            "required": [
                "app_requests",
                "command_code"
            ],
            "title": "Command"
        },
        "CommandRequest": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "code": {
                    "title": "Request Code",
                    "description": "Code used to identify the request",
                    "type": "integer"
                },
                "name": {
                    "title": "Request Name",
                    "description": "user friendly name for the request",
                    "type": "string",
                    "examples": ["My Request"]
                },
                "description": {
                    "title": "Request Description",
                    "description": "User friendly description for the request",
                    "type": "string"
                },
                "responses": {
                    "title": "Request Responses",
                    "description": "Responses that can be made by the FlexiBLE device for the specific request",
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/CommandResponse"
                    }
                }
            },
            "required": [
                "code",
                "description",
                "name"
            ],
            "title": "CommandRequest"
        },
        "CommandResponse": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "code": {
                    "title": "Request Code",
                    "description": "Code used to identify the response",
                    "type": "integer"
                },
                "name": {
                    "title": "Response Name",
                    "description": "user friendly name for the response",
                    "type": "string",
                    "examples": ["My Request"]
                },
                "description": {
                    "title": "Response Description",
                    "description": "User friendly description for the response",
                    "type": "string"
                },
                "response_type": {
                    "title": "Response Type",
                    "description": "Type of response that can be made by the FlexiBLE device for the specific response",
                    "type": "string",
                    "enum": ["success", "error"]
                }
            },
            "required": [
                "code",
                "description",
                "name"
            ],
            "title": "CommandResponse"
        },
        "ConfigValue": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "title": "Configuration Name",
                    "description": "User friendly name for the data value",
                    "type": "string"
                },
                "description": {
                    "title": "Configuration Description",
                    "description": "User friendly description for the data value",
                    "type": "string"
                },
                "length": {
                    "title": "Length",
                    "description": "Length of the configuration in bits",
                    "type": "integer"
                },
                "unit": {
                    "title": "Unit of Measurement",
                    "description": "a user-friendly unit, optional",
                    "type": "string"
                },
                "data_type": {
                    "title": "Data Type",
                    "type": "string",
                    "enum": ["int", "uint", "float", "ascii", "utf-8"]
                },
                "selection_type": {
                    "title": "Selection Type",
                    "type": "string",
                    "enum": ["range", "single", "multi"]
                },
                "default_value": {
                    "title": "Default Value",
                    "description": "Default value for the configuration",
                    "type": "string"
                }
            },
            "required": [],
            "dependencies": {
                "selection_type": {
                    "oneOf": [
                        {
                            "properties": {
                                "selection_type": {
                                    "enum": ["range"]
                                },
                                "range": {
                                    "$ref": "#/definitions/Range"
                                }
                            },
                            "required": [
                                "range"
                            ]
                        },
                        {
                            "properties": {
                                "selection_type": {
                                    "enum": ["single", "multi"]
                                },
                                "options": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/definitions/Option"
                                    }
                                }
                            },
                            "required": [
                                "options"
                            ]
                        }
                    ]
                }
            },
            "title": "Configuration Value"
        },
        "DataValue": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "title": "Data Value Name",
                    "description": "User friendly name for the data value",
                    "type": "string"
                },
                "description": {
                    "title": "Data Value Description",
                    "description": "User friendly description for the data value",
                    "type": "string"
                },
                "length": {
                    "title": "Length",
                    "description": "Length of the configuration in bits",
                    "type": "integer"
                },
                "unit": {
                    "title": "Unit of Measurement",
                    "description": "a user-friendly unit, optional",
                    "type": "string"
                },
                "multiplier": {
                    "title": "Value Multiplier",
                    "type": "number",
                    "default": 0.0
                },
                "data_type": {
                    "title": "Data Type",
                    "type": "string",
                    "enum": ["int", "uint", "float", "ascii", "utf-8"]
                },
                "variable_type": {
                    "title": "Variable Type",
                    "type": "string",
                    "enum": ["none", "value", "tag"]
                }
            },
            "required": [],
            "dependencies": {
                "selection_type": {
                    "oneOf": [
                        {
                            "properties": {
                                "variable_type": {
                                    "enum": ["value"]
                                },
                                "depends_on": {
                                    "title": "Depends On",
                                    "description": "A tag value which this value depends, optional. Used for graphing.",
                                    "type": "string",
                                    "default": "none"
                                }
                            },
                            "required": [
                                "variable_type",
                                "depends_on"
                            ]
                        },
                        {
                            "properties": {
                                "variable_type": {
                                    "enum": ["none", "tag"]
                                }
                            },
                            "required": [
                                "variable_type"
                            ]
                        }
                    ]
                }
            },
            "title": "Data Value"
        },
        "Option": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "value_int": {
                    "type": "integer"
                }
            },
            "required": [
                "description",
                "name",
                "value_int"
            ],
            "title": "Option"
        },
        "Range": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "start": {
                    "type": "number"
                },
                "end": {
                    "type": "number"
                },
                "step": {
                    "type": "number"
                }
            },
            "required": [
                "end",
                "start",
                "step"
            ],
            "title": "Range"
        },
        "DataStream": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "id": {
                    "title": "ID",
                    "type": "string"
                },
                "name": {
                    "title": "Name",
                    "description": "User friendly name for the data stream",
                    "type": "string"
                },
                "description": {
                    "title": "Description",
                    "description": "User friendly description for the data stream",
                    "type": "string"
                },
                "precision": {
                    "title": "Precision",
                    "description": "Time precision of the data stream",
                    "type": "string",
                    "enum": ["ms", "us"],
                    "default": "ms"
                },
                "config_values": {
                    "title": "Configurations",
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/ConfigValue"
                    }
                },
                "data_values": {
                    "title": "Data Values",
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/DataValue"
                    }
                },
                "ble": {
                    "title": "BLE Details",
                    "$ref": "#/definitions/DataStreamBle"
                }
            },
            "required": [
                "ble",
                "config_values",
                "data_values",
                "description",
                "id",
                "name",
                "precision"
            ],
            "title": "Data Stream"
        },
        "DataStreamBle": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "service_uuid": {
                    "title": "GATT Service UUID",
                    "type": "string",
                    "format": "uuid"
                },
                "data_char_uuid": {
                    "title": "Data Characteristic UUID",
                    "type": "string",
                    "format": "uuid"
                },
                "config_char_uuid": {
                    "title": "Configuration Characteristic UUID",
                    "type": "string",
                    "format": "uuid"
                }
            },
            "required": [
                "config_char_uuid",
                "data_char_uuid",
                "service_uuid"
            ],
            "title": "Data Stream BLE Details"
        }
    }
}
