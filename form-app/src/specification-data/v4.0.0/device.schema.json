{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$ref": "#/definitions/FlexiBLEDevice",
    "definitions": {
        "FlexiBLEDevice": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "id": {
                    "title": "ID",
                    "description": "Unique identifier for the FlexiBLE device",
                    "type": "string",
                    "format": "uuid",
                    "readOnly": true,
                    "default": "__UUID__"
                },
                "name": {
                    "title": "FlexiBLE Device Name",
                    "description": "A user friendly name for the FlexiBLE device",
                    "examples": ["ExampleSensor"],
                    "type": "string"
                },
                "description": {
                    "title": "FlexiBLE Device Description",
                    "description": "A user friendly description for the FlexiBLE device",
                    "examples": ["ExampleSensor is a sensor that does something"],
                    "type": "string"
                },
                "canGroup": {
                    "title": "Devices Can Group",
                    "description": "Indicates if the device can be grouped with other devices, in which case time synchronization is required",
                    "type": "boolean",
                    "default": false
                },
                "flexibleVersion": {
                    "const": "0.4.0",
                    "default": "0.4.0",
                    "type": "string",
                    "readOnly": true
                },
                "ble": {
                    "title": "BLE Details",
                    "description": "Details of the FlexiBLE device's BLE implementation",
                    "$ref": "#/definitions/FlexiBLEDeviceBle"
                },
                "configValues": {
                    "title": "Device Configurations",
                    "description": "Configuration values for the FlexiBLE device",
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/ConfigValue"
                    }
                },
                "commands": {
                    "title": "Device Commands",
                    "description": "Commands that can be initaited by the central device",
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Command"
                    }
                },
                "dataStreams": {
                    "title": "Time Series Data Streams",
                    "description": "Embedded sensor data",
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/DataStream"
                    }
                }
            },
            "required": [
                "ble",
                "commands",
                "configValues",
                "dataStreams",
                "flexibleVersion",
                "name"
            ],
            "title": "FlexiBLEDevice"
        },
        "FlexiBLEDeviceBle": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "bleServices": {
                    "title": "Standard BLE Services",
                    "description": "Standard BLE GATT (from Bluetooth specification) which are supported by FlexiBLE Applications",
                    "type": "array",
                    "items": {
                        "type": "string",
                        "enum": ["battery", "heart_rate"]
                    }
                },
                "flexibleServiceUuid": {
                    "title": "FlexiBLE Service UUID",
                    "type": "string",
                    "format": "uuid",
                    "default": "1a220001-c2ed-4d11-ad1e-fc06d8a02d37",
                    "readOnly": true
                },
                "deviceRoleCharUuid": {
                    "title": "FlexiBLE Device Role Characteristic UUID",
                    "type": "string",
                    "format": "uuid",
                    "default": "1a220002-c2ed-4d11-ad1e-fc06d8a02d37",
                    "readOnly": true
                },
                "deviceSpecificationURLCharUUID": {
                    "title": "FlexiBLE Device Specification URL Characteristic UUID",
                    "type": "string",
                    "format": "uuid",
                    "default": "1a220003-c2ed-4d11-ad1e-fc06d8a02d37",
                    "readOnly": true
                },
                "epochCharUUID": {
                    "title": "FlexiBLE Epoch Characteristic UUID",
                    "type": "string",
                    "format": "uuid",
                    "default": "1a220004-c2ed-4d11-ad1e-fc06d8a02d37",
                    "readOnly": true
                },
                "deviceConfigCharUUID": {
                    "title": "FlexiBLE Device Config Characteristic UUID",
                    "type": "string",
                    "format": "uuid",
                    "default": "1a220005-c2ed-4d11-ad1e-fc06d8a02d37",
                    "readOnly": true
                },
                "commandServiceUUID": {
                    "title": "FlexiBLE Command Service UUID",
                    "type": "string",
                    "format": "uuid",
                    "default": "dba1c735-0f8c-432e-8458-efbd9cf5985e",
                    "readOnly": true
                },
                "commandRxCharUUID": {
                    "title": "FlexiBLE Command Rx Characteristic UUID",
                    "type": "string",
                    "format": "uuid",
                    "default": "dba1c736-0f8c-432e-8458-efbd9cf5985e",
                    "readOnly": true
                },
                "commandTxCharUUID": {
                    "title": "FlexiBLE Command Tx Characteristic UUID",
                    "type": "string",
                    "format": "uuid",
                    "default": "dba1c737-0f8c-432e-8458-efbd9cf5985e",
                    "readOnly": true
                }
            },
            "required": [
                "deviceInCharUuid",
                "deviceOutCharUuid",
                "flexibleServiceUuid"
            ],
            "title": "FlexiBLEDeviceBle"
        },
        "Command": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "id": {
                    "title": "ID",
                    "description": "Unique identifier for the command",
                    "type": "string",
                    "format": "uuid",
                    "readOnly": true,
                    "default": "__UUID__"
                },
                "name": {
                    "title": "Name",
                    "description": "User friendly name for the command",
                    "type": "string",
                    "examples": ["MyCommand"],
                    "default": "Command __POSITION__"
                },
                "commandCode": {
                    "title": "Command Code",
                    "description": "Code used to identify the command",
                    "type": "integer",
                    "examples": [1,2,3]
                },
                "appRequests": {
                    "title": "App Requests",
                    "description": "Requests that can be made by the central device",  
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/CommandRequest"
                    }
                }
            },
            "required": [
                "appRequests",
                "commandCode"
            ],
            "title": "Command"
        },
        "CommandRequest": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "code": {
                    "title": "Request Code",
                    "description": "Code used to identify the request",
                    "type": "integer"
                },
                "name": {
                    "title": "Request Name",
                    "description": "user friendly name for the request",
                    "type": "string",
                    "examples": ["My Request"]
                },
                "description": {
                    "title": "Request Description",
                    "description": "User friendly description for the request",
                    "type": "string"
                },
                "responses": {
                    "title": "Request Responses",
                    "description": "Responses that can be made by the FlexiBLE device for the specific request",
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/CommandResponse"
                    }
                }
            },
            "required": [
                "code",
                "description",
                "name"
            ],
            "title": "CommandRequest"
        },
        "CommandResponse": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "code": {
                    "title": "Request Code",
                    "description": "Code used to identify the response",
                    "type": "integer"
                },
                "name": {
                    "title": "Response Name",
                    "description": "user friendly name for the response",
                    "type": "string",
                    "examples": ["My Request"]
                },
                "description": {
                    "title": "Response Description",
                    "description": "User friendly description for the response",
                    "type": "string"
                },
                "responseType": {
                    "title": "Response Type",
                    "description": "Type of response that can be made by the FlexiBLE device for the specific response",
                    "type": "string",
                    "enum": ["success", "error"]
                }
            },
            "required": [
                "code",
                "description",
                "name"
            ],
            "title": "CommandResponse"
        },
        "ConfigValue": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "id": {
                    "title": "ID",
                    "description": "Unique identifier for the Config Value",
                    "type": "string",
                    "format": "uuid",
                    "readOnly": true,
                    "default": "__UUID__"
                },
                "name": {
                    "title": "Configuration Name",
                    "description": "User friendly name for the data value",
                    "type": "string",
                    "default": "Configuration __POSITION__"
                },
                "description": {
                    "title": "Configuration Description",
                    "description": "User friendly description for the data value",
                    "type": "string"
                },
                "length": {
                    "title": "Length",
                    "description": "Length of the configuration in bits",
                    "type": "integer",
                    "default": 8,
                    "minimum": 1,
                    "maximum": 64
                },
                "unit": {
                    "title": "Unit of Measurement",
                    "description": "a user-friendly unit, optional",
                    "type": "string"
                },
                "dataType": {
                    "title": "Data Type",
                    "type": "string",
                    "enum": ["int", "uint", "float", "bool", "ascii", "utf-8"]
                },
                "selectionType": {
                    "title": "Selection Type",
                    "type": "string",
                    "enum": ["freeform", "range", "single", "multi", "toggle"]
                },
                "defaultValue": {
                    "title": "Default Value",
                    "description": "Default value for the configuration",
                    "type": "string"
                },
                "range": {
                },
                "options": {
                }
            },
            "required": ["id", "name", "length", "dataType", "defaultValue"],
            "dependencies": {
                "dataType": {
                    "oneOf": [
                        {
                            "properties": {
                                "dataType": {
                                    "enum": ["int", "uint", "float"]
                                },
                                "selectionType": {
                                    "enum": ["freeform", "range", "single", "multi"],
                                    "default": "range"
                                }
                            },
                            "required": [
                                "dataType",
                                "selectionType"
                            ]
                        },
                        {
                            "properties": {
                                "dataType": {
                                    "enum": ["ascii", "utf-8"]
                                },
                                "selectionType": {
                                    "enum": ["freeform" ,"single", "multi"],
                                    "default": "single"
                                }
                            },
                            "required": [
                                "dataType",
                                "selectionType"
                            ]
                        },
                        {
                            "properties": {
                                "dataType": {
                                    "enum": ["bool"]
                                },
                                "selectionType": {
                                    "enum": ["toggle"],
                                    "default": "toggle"
                                }
                            },
                            "required": [
                                "dataType",
                                "selectionType"
                            ]
                        }
                    ]
                },
                "selectionType": {
                    "oneOf": [
                        {
                            "properties": {
                                "selectionType": {
                                    "enum": ["range"]
                                },
                                "range": {
                                    "title": "Range",
                                    "$ref": "#/definitions/Range"
                                }
                            },
                            "required": [
                                "selectionType",
                                "range"
                            ]
                        },
                        {
                            "properties": {
                                "selectionType": {
                                    "enum": ["single", "multi"]
                                },
                                "options": {
                                    "title": "Options",
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/definitions/Option"
                                    }
                                }
                            },
                            "required": [
                                "selectionType",
                                "options"
                            ]
                        },
                        {
                            "properties": {
                                "selectionType": {
                                    "enum": ["toggle", "freeform"]
                                }
                            },
                            "required": [
                                "selectionType"
                            ]
                        }
                    ]
                }
            },
            "title": "Configuration Value"
        },
        "DataValue": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "id": {
                    "title": "ID",
                    "description": "Unique identifier for the Config Value",
                    "type": "string",
                    "format": "uuid",
                    "readOnly": true,
                    "default": "__UUID__"
                },
                "name": {
                    "title": "Data Value Name",
                    "description": "User friendly name for the data value",
                    "type": "string",
                    "default": "Data Value __POSITION__"
                },
                "description": {
                    "title": "Data Value Description",
                    "description": "User friendly description for the data value",
                    "type": "string"
                },
                "length": {
                    "title": "Length",
                    "description": "Length of the configuration in bits",
                    "type": "integer",
                    "default": 8,
                    "minimum": 1,
                    "maximum": 64
                },
                "unit": {
                    "title": "Unit of Measurement",
                    "description": "a user-friendly unit, optional",
                    "type": "string"
                },
                "multiplier": {
                    "title": "Value Multiplier",
                    "type": "number",
                    "default": 0.0
                },
                "dataType": {
                    "title": "Data Type",
                    "type": "string",
                    "enum": ["int", "uint", "float", "ascii", "utf-8"]
                },
                "variableType": {
                    "title": "Variable Type",
                    "type": "string",
                    "enum": ["none", "value", "tag"]
                }
            },
            "required": [],
            "dependencies": {
                "selectionType": {
                    "oneOf": [
                        {
                            "properties": {
                                "variableType": {
                                    "enum": ["value"]
                                },
                                "dependsOn": {
                                    "title": "Depends On",
                                    "description": "A tag value which this value depends, optional. Used for graphing.",
                                    "type": "string",
                                    "default": "none"
                                }
                            },
                            "required": [
                                "variableType",
                                "dependsOn"
                            ]
                        },
                        {
                            "properties": {
                                "variableType": {
                                    "enum": ["none", "tag"]
                                }
                            },
                            "required": [
                                "variableType"
                            ]
                        }
                    ]
                }
            },
            "title": "Data Value"
        },
        "Option": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "value": {
                    "type": "integer"
                }
            },
            "required": [
                "description",
                "name",
                "value"
            ],
            "title": "Option"
        },
        "Range": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "start": {
                    "type": "number"
                },
                "end": {
                    "type": "number"
                },
                "step": {
                    "type": "number"
                }
            },
            "required": [
                "end",
                "start",
                "step"
            ],
            "title": "Range"
        },
        "DataStream": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "id": {
                    "title": "ID",
                    "type": "string",
                    "default": "__UUID__"
                },
                "name": {
                    "title": "Name",
                    "description": "User friendly name for the data stream",
                    "type": "string",
                    "default": "Data Stream __POSITION__"
                },
                "description": {
                    "title": "Description",
                    "description": "User friendly description for the data stream",
                    "type": "string"
                },
                "precision": {
                    "title": "Precision",
                    "description": "Time precision of the data stream",
                    "type": "string",
                    "enum": ["ms", "us"],
                    "default": "ms"
                },
                "configValues": {
                    "title": "Data Stream Configurations",
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/ConfigValue"
                    }
                },
                "dataValues": {
                    "title": "Data Stream Data Values",
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/DataValue"
                    }
                },
                "ble": {
                    "title": "BLE Details",
                    "$ref": "#/definitions/DataStreamBle"
                }
            },
            "required": [
                "ble",
                "configValues",
                "dataValues",
                "description",
                "id",
                "name",
                "precision"
            ],
            "title": "Time Series Data Stream"
        },
        "DataStreamBle": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "serviceUuid": {
                    "title": "GATT Service UUID",
                    "type": "string",
                    "format": "uuid",
                    "default": "__UUID__"
                },
                "dataCharUuid": {
                    "title": "Data Characteristic UUID",
                    "type": "string",
                    "format": "uuid",
                    "default": "__UUID+1__"
                },
                "configCharUuid": {
                    "title": "Configuration Characteristic UUID",
                    "type": "string",
                    "format": "uuid",
                    "default": "__UUID+2__"
                }
            },
            "required": [
                "configCharUuid",
                "dataCharUuid",
                "serviceUuid"
            ],
            "title": "Data Stream BLE Details"
        }
    }
}
